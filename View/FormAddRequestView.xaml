<Window x:Class="PrototypeEDUCOM.View.FormAddRequestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FormRequestView" Height="300" Width="300">
    <Grid>
        <Label Name="lblDescription" Content="Description" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,93,0,0"/>
        <Label Name="lblState" Content="State" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="83,128,0,0"/>
        <Button Command="{Binding cmdAdd}" Content="Ajouter" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Margin="0,0,0,10"/>
        <ComboBox Name="cbxState" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="125,128,0,0"/>
        <TextBox Name="txtDescription" Text="{Binding description, Mode=OneWayToSource}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="125,94,0,0"/>
        <Label Content="Ajouter une demande" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" />
    </Grid>
</Window>
