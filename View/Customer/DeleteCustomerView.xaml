<Window x:Class="PrototypeEDUCOM.View.Customer.DeleteCustomerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeleteCustomerView" Height="200" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner"> 
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="Avertissement !!!! /!\" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" />
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button IsEnabled="False" HorizontalAlignment="Center" VerticalAlignment="Center"> Archiver</Button>
            <Button Command="{Binding cmdDelete}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1"> Supprimer</Button>

        </Grid>
        
        <Label Grid.Row="1" Content="Un texte sur les dépendances" HorizontalAlignment="Center"/>
    </Grid>
</Window>
